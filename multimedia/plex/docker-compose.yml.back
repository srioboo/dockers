version: "2.1"
services:
  plex:
    image: lscr.io/linuxserver/plex:latest
    container_name: plex
    network_mode: host
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - VERSION=docker
      - PLEX_CLAIM= #optional
    volumes:
      # - /path/to/library:/config
      - /mnt/e/series:/tv
      - /mnt/e/peliculas:/movies
    restart: unless-stopped
